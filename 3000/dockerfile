# Start from the original image
FROM kale5/rickroll

# Expose the new port
EXPOSE 3000


# Expose the new port
EXPOSE 3000

# Update the Nginx configuration to use port 3000 instead of 80
RUN sed -i 's/listen 80;/listen 3000;/' /etc/nginx/conf.d/default.conf

# Set the container to run as intended by the original image
CMD ["nginx", "-g", "daemon off;"]
